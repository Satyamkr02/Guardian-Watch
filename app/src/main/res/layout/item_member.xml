<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Member_CardView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/card_bg_in_home_fragment"
        app:cardCornerRadius="24dp"
        app:cardElevation="@dimen/dimen_08dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/img_User"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:elevation="@dimen/dimen_16dp"
        android:src="@drawable/profile_boy"
        app:layout_constraintBottom_toBottomOf="@id/Member_CardView"
        app:layout_constraintStart_toStartOf="@id/Member_CardView"
        app:layout_constraintTop_toTopOf="@id/Member_CardView"

        />

    <TextView
        android:id="@+id/name_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:elevation="@dimen/dimen_16dp"
        android:gravity="center"
        android:text="Satyam Kumar"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_User"
        app:layout_constraintTop_toTopOf="@id/Member_CardView" />

</androidx.constraintlayout.widget.ConstraintLayout>