<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/tvMyFamilyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="MyFamily"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_three_dots"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Card1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/card_bg_in_home_fragment"
        app:cardCornerRadius="24dp"
        app:cardElevation="@dimen/dimen_08dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMyFamilyTitle" />

    <ImageView
        android:id="@+id/img_User1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:elevation="@dimen/dimen_16dp"
        android:src="@drawable/profile_boy"
        app:layout_constraintBottom_toBottomOf="@id/Card1"
        app:layout_constraintStart_toStartOf="@id/Card1"
        app:layout_constraintTop_toTopOf="@id/Card1"

        />

    <TextView
        android:id="@+id/user1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:elevation="@dimen/dimen_16dp"
        android:gravity="center"
        android:text="Satyam Kumar"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_User1"
        app:layout_constraintTop_toTopOf="@id/Card1" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Card2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/card_bg_in_home_fragment"
        app:cardCornerRadius="24dp"
        app:cardElevation="@dimen/dimen_08dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Card1" />

    <ImageView
        android:id="@+id/img_User2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:elevation="@dimen/dimen_16dp"
        android:src="@drawable/profile_girl"
        app:layout_constraintBottom_toBottomOf="@id/Card2"
        app:layout_constraintStart_toStartOf="@id/Card2"
        app:layout_constraintTop_toTopOf="@id/Card2"

        />

    <TextView
        android:id="@+id/user2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:elevation="@dimen/dimen_16dp"
        android:gravity="center"
        android:text="Rupali Yadav"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_User2"
        app:layout_constraintTop_toTopOf="@id/Card2" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Card3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/card_bg_in_home_fragment"
        app:cardCornerRadius="24dp"
        app:cardElevation="@dimen/dimen_08dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Card2" />

    <ImageView
        android:id="@+id/img_User3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="16dp"
        android:elevation="@dimen/dimen_16dp"
        android:src="@drawable/profile_young_man"
        app:layout_constraintBottom_toBottomOf="@id/Card3"
        app:layout_constraintStart_toStartOf="@id/Card3"
        app:layout_constraintTop_toTopOf="@id/Card3"

        />

    <TextView
        android:id="@+id/user3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:elevation="@dimen/dimen_16dp"
        android:gravity="center"
        android:text="Sujeet Kohli"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_User3"
        app:layout_constraintTop_toTopOf="@id/Card3" />



</androidx.constraintlayout.widget.ConstraintLayout>