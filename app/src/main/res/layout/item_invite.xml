<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dimen_08dp">


    <ImageView
        android:id="@+id/contact_img_user"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/profile_young_man"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text = "Satyam"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintTop_toBottomOf="@id/contact_img_user"
        app:layout_constraintStart_toStartOf="@id/contact_img_user"
        app:layout_constraintEnd_toEndOf="@id/contact_img_user"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_rounded_rect"
        android:backgroundTint="@color/btn_invite"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/contact_name"
        app:layout_constraintStart_toStartOf="@id/contact_img_user"
        app:layout_constraintEnd_toEndOf="@id/contact_img_user">

        <TextView
            android:id="@+id/tv_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "INVITE"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintTop_toBottomOf="@id/contact_img_user"
            app:layout_constraintStart_toStartOf="@id/contact_img_user"
            app:layout_constraintEnd_toEndOf="@id/contact_img_user"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>